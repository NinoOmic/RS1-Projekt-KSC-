@using WebApplication2.Models;
@using Kulturno_sportski_centar.Helper;
@{
    //Layout = null;
    List<Sala> sale = (List<Sala>)ViewData["Sala"];
 }
@{
    ViewBag.Title = "Sala";
}


<h1>Prikaz sala</h1>

           
<table class="table table-bordered table-hover ">
    <thead>
        <tr>
            <td>Id</td>
            <td>Naziv</td>
            <td>Vrsta</td>
            <td>Broj sjedišta</td>
            <td>Kapacitet</td>
            <td>Kulturno sportski centar</td>
            <td>Akcija</td>
        </tr>
        @foreach (Sala x in sale)
        {
        <tr>
            <td>@x.Id</td>
            <td>@x.Naziv</td>
            <td>@x.Vrsta</td>
            <td>@x.BrojSjedista</td>
            <td>@x.Kapacitet</td>
            <td>@x.KulturnoSportskiCentar.Naziv</td>

            <td>
                <a href="/ModulZaposlenik/Oprema/Prikazi?SalaId=@x.Id" class="btn btn-info">Oprema</a>
                @if (Autentifikacija.KorisnikSesija.UlogaNaSistemuId == 1)
                {
                    <a href="/ModulZaposlenik/Sala/Obrisi?SalaId=@x.Id" class="btn btn-danger">Obrisi</a>

                    <a href="/ModulZaposlenik/Sala/Uredi?SalaId=@x.Id" class="btn btn-primary">Uredi</a>
                }
                </td>

            </tr>
        }
    </thead>
</table>

@if (Autentifikacija.KorisnikSesija.UlogaNaSistemuId == 1)
{
    <a href="/ModulZaposlenik/Sala/Dodaj" class="btn btn-outline-dark">Dodaj</a>
}

