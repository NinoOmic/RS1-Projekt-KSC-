@using WebApplication2.Models;
@using Kulturno_sportski_centar.Helper;
@{
    // Layout = null;
    ViewBag.Title = "Termin";
}
@model Kulturno_sportski_centar.Areas.ModulZaposlenik.Models.TerminPrikaziViewModel
<h1>Aktivni termini</h1>

<form>
    @Html.DropDownListFor(model => model.SalaId, Model.ListaSala, new { @class = "btn btn-secondary dropdown-toggle" })

    <input type="submit" value="Odaberi" class="btn btn-default" />
</form>

<div class="container-fluid">

    <table class="table table-bordered table-hover ">
        <thead class="thead-active">
            <tr>
                <td>Datum</td>
                <td>Pocetak</td>
                <td>Kraj</td>
                <td>Sala</td>
                <td>Akcija</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model.Termini)
            {
                <tr>
                    <td>@x.Datum.ToLongDateString()</td>
                    <td>@x.Pocetak</td>
                    <td>@x.Kraj</td>
                    <td>@x.Sala.Naziv</td>
                    <td>
                        @if (x.Rezervisan == false)
                        {
                            <a href="/ModulKorisnik/Rezervacija/Snimi?TerminId=@x.Id" class="btn btn-success">Rezervisi</a>

                            <a href="/ModulZaposlenik/Dogadjaj/Dodaj?TerminId=@x.Id" class="btn btn-dark">Kreiraj događaj</a>
                        }
                        @if (Autentifikacija.KorisnikSesija.UlogaNaSistemuId == 1)
                        {
                            <a href="/ModulZaposlenik/Termin/Obrisi?Id=@x.Id" class="btn btn-danger">Obriši</a>
                        }
                    </td>


                </tr>
            }
        </tbody>

    </table>

    @if (Autentifikacija.KorisnikSesija.UlogaNaSistemuId == 1)
    {
        <a href="~/ModulZaposlenik/Termin/Dodaj" class="btn btn-info">Dodaj termin</a>
    }
</div>